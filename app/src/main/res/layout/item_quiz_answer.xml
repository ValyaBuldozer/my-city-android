<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable name="title" type="String"/>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/quiz_answer_item_shape"
            android:padding="10dp"
            android:layout_margin="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_info_category_title_size"
                android:textColor="@color/detail_info_category_text_color"
                android:text="@{title}"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:text="Some quiz answer Some quiz answer Some quiz answer "/>

    </LinearLayout>

</layout>