<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.home.view.activity.HomeActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <fragment
                android:id="@+id/menu_rnd_route_fragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_element_height"
                android:name="ru.edu.ksu.mycity.presentation.home.view.fragments.HomeMenuFragment"
                tools:layout="@layout/fragment_home_menu"/>

        <fragment
                android:id="@+id/menu_routes_fragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_element_height"
                android:name="ru.edu.ksu.mycity.presentation.home.view.fragments.HomeMenuFragment"
                tools:layout="@layout/fragment_home_menu"/>


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_element_height">

            <fragment
                    android:id="@+id/menu_places_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/menu_museums_fragment"
                    android:name="ru.edu.ksu.mycity.presentation.home.view.fragments.HomeMenuFragment"
                    tools:layout="@layout/fragment_home_menu"/>

            <fragment
                    android:id="@+id/menu_museums_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/menu_places_fragment"
                    android:name="ru.edu.ksu.mycity.presentation.home.view.fragments.HomeMenuFragment"
                    tools:layout="@layout/fragment_home_menu"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>