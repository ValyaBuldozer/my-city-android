<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewModel"
                type="ru.edu.ksu.mycity.entity.presentation.Route"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_item_height"
            android:orientation="horizontal"
            android:layout_margin="@dimen/default_item_margin">

        <ImageView
                android:id="@+id/item_route_iv"
                image_url="@{viewModel.imagePath}"
                android:layout_width="@dimen/default_item_height"
                android:layout_height="@dimen/default_item_height"/>
        
        <TextView
                android:id="@+id/item_route_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_item_title_height"
                android:textSize="@dimen/default_item_title_size"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="13dp"
                android:text="@{viewModel.name}"
                tools:text="Default route"/>

    </LinearLayout>

</layout>