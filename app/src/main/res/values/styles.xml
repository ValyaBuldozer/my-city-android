<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/default_activity_background</item>
        <item name="android:textViewStyle">@style/RobotoSlabViewStyle</item>
        <item name="android:fontFamily">@font/roboto_slab_font</item>
    </style>

    <style name="RobotoSlabViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_slab_font</item>
        <item name="android:textColor">#744024</item>
    </style>

</resources>
