<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.edu.ksu.mycity">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".presentation.home.view.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".presentation.splashscreen.SplashScreen">
        </activity>
        <activity android:name=".presentation.routes.view.RoutesScreenActivity">
        </activity>
        <activity android:name=".presentation.places.view.PlacesScreenActivity">
        </activity>
        <activity android:name=".presentation.detail.place.view.DetailPlaceScreenActivity">
        </activity>
        <activity android:name=".presentation.detail.route.view.DetailRouteScreenActivity">
        </activity>
    </application>

</manifest>